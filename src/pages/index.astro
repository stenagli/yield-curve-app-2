---
import Layout from '/src/layouts/Layout.astro';
import RealCanvas from '/src/components/real-canvas.astro';
import NominalCanvas from '/src/components/nominal-canvas.astro';
---
<Layout>
  <script type="module" is:inline>
    import makeChart from '/src/makeChart.ts';

    makeChart({
      ctx: document.getElementById("real-yield-chart"),
      title: 'Real Yields',
      borderColor: "rgb(75, 192, 192)",
    });

    makeChart({
      ctx: document.getElementById("nominal-yield-chart"),
      title: 'Nominal Yields',
      borderColor: 'rgb(255, 99, 132)',
    });
  </script>

  <RealCanvas />

  <NominalCanvas/>
</Layout>
